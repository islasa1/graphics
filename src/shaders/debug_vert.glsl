#version 440

layout( location = 0 ) in vec3 pos;

out vec3 dist;

void main()
{  
  gl_Position = vec4( pos, 1.0f );

  dist = vec3( abs( pos.x ), abs( pos.y ), abs( pos.z ) );
}
